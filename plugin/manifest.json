{
	"manifest_version": 2,
	"name": "xps-google-translation",
	"version": "1.0.1",
	"description": "谷歌翻译插件",
	"icons": {
		"16": "images/tray.png",
		"48": "images/tray.png",
		"128": "images/tray.png"
	},
	"browser_action": {
		"default_popup": "reception.html",
		"default_icon": "images/tray.png",
		"default_title": "谷歌翻译插件"
	},
	"background": {
		"page": "background.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://translate.google.com/*"
			],
			"js": [
				"js/base.js"
			],
			"css": [
				"css/base.css"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://translate.google.cn/*"
			],
			"js": [
				"js/base.js"
			],
			"css": [
				"css/base.css"
			],
			"run_at": "document_end"
		}
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'" ,
	"permissions": [
		"contextMenus",
		"tabs",
		"notifications",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"https://wallhaven.cc/*",
		"https://unpkg.com/vue@3"
	],
	"homepage_url": "https://mlmdflr.cc/ggdoc"
}